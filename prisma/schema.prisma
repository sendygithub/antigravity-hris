generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id           String   @id @default(uuid())
  Name         String
  email        String   @unique
  status       String
  hiredDate    DateTime
  joinedDate   DateTime
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
  roleId       Int
  departmentId String

  attendance    Attendance[]
  role          Role           @relation(fields: [roleId], references: [id])
  department    Department     @relation(fields: [departmentId], references: [id])
  payroll       Payroll[]
  leaveRequests LeaveRequest[]
  tasks         Task[]
}

model Attendance {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  date       DateTime
  checkIn    String?
  checkOut   String?
  status     String // Present, Late, Absent, On Leave

  @@index([employeeId])
  @@index([date])
}

model Role {
  id          Int        @id @default(autoincrement())
  title       String     @unique
  description String
  permissions String
  employees   Employee[]
}

model Payroll {
  id          String   @id @default(uuid())
  employeeId  String
  employee    Employee @relation(fields: [employeeId], references: [id])
  salary      Decimal  @db.Decimal(12, 2)
  status      String // Paid, Processing, Pending
  paymentDate DateTime
}

model LeaveRequest {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  type       String // Sick, Annual, Personal
  startDate  DateTime
  endDate    DateTime
  reason     String
  status     String // Pending, Approved, Rejected
}

model Department {
  id          String     @id @default(uuid())
  name        String     @unique
  description String
  employees   Employee[]
}

model Task {
  id         String   @id @default(uuid())
  title      String
  assigneeId String
  assignee   Employee @relation(fields: [assigneeId], references: [id])
  priority   String
  status     String
  dueDate    DateTime
}
